<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Pilih Tanggal Sewa"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Tanggal Pengambilan -->
    <EditText
        android:id="@+id/etTanggalAmbil"
        android:hint="Tanggal Pengambilan"
        android:focusable="false"
        android:drawableStart="@drawable/baseline_calendar_month_24"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Tanggal Pengembalian -->
    <EditText
        android:id="@+id/etTanggalKembali"
        android:hint="Tanggal Pengembalian"
        android:focusable="false"
        android:drawableStart="@drawable/baseline_calendar_month_24"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Tombol Simpan -->
    <Button
        android:id="@+id/btnSimpanTanggal"
        android:text="Simpan Tanggal"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
