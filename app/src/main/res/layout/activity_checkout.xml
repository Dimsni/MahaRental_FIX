<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Metode Pembayaran"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <RadioGroup
        android:id="@+id/rg_payment_methods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_credit_card"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Kartu Kredit / Debit"
            android:textSize="16sp"
            android:paddingStart="12dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/tombol_kotak"/>

        <RadioButton
            android:id="@+id/rb_bank_transfer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Transfer Bank (VA)"
            android:textSize="16sp"
            android:paddingStart="12dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/tombol_kotak"/>

        <RadioButton
            android:id="@+id/rb_ewallet"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="E-Wallet (Dana/OVO/GoPay)"
            android:textSize="16sp"
            android:paddingStart="12dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/tombol_kotak"/>
    </RadioGroup>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Pilih Metode Ini"
        android:textStyle="bold"/>
</LinearLayout>